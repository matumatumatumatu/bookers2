<!--book/show-->
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user_info', user: @user %>
        <%= render 'books/new' %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h3 class="mb-3 border-bottom">Book detail</h3>
        <div class="row mb-2">
          <div class="col-md-1">
            <%= link_to user_path(@book.user) do %>
              <%= image_tag @book.user.get_profile_image(50, 50), class: "img-fluid rounded-circle" %><br>
              <%= @book.user.name %>
            <% end %>
          </div>

          <div class="col-md-5">
            <h5 class="pb-1">Title</h5>
            <h5><%= link_to @book.title, book_path(@book) %></h5>
          </div>

          <div class="col-md-6">
            <h5 class="pb-1">Opinion</h5>
            <p><%= @book.body %></p>
          </div>
        </div>

        <% if user_signed_in? && current_user == @user %>
          <div class="row">
            <div class="col-12">
              <div class="mt-3">
                <%= link_to @book.user.name, user_path(@book.user) %>
              </div>
              <div class="mt-3">
                <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-outline-primary mr-2' %>
                <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "本当に削除してもよろしいですか？" }, class: 'btn btn-outline-danger' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>