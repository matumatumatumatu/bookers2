<!-- _book_card-->
<div class="card w-50 mx-auto mt-4 shadow-lg">
  
  
  
  <%= link_to book_path(book) do %>
  <% end %>
  <div class="card-body">
    <div class="row">
      <div class="col-2">
        <%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image(100, 100), class: "mt-3 rounded-circle" %>
        <% end %>
      </div>
      <div class="col-10">
        <p class="card-title">
          <%= link_to book.title, book_path(book), class: "text-dark" %>
        </p>
        <p class="card-text">説明：<%= book.body %></p>
        <span><i class="fas fa-user"></i> By <%= user.name %> ｜ </span>
      </div>
    </div>
  </div>
</div>