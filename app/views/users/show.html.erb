<!-- user/show.html.erb -->
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user_info', user: @user %>
        <% if user_signed_in? && current_user != @user %>
        <% end %>
        <div class="mt-4">
          <%= render 'books/new' %>
        </div>
      </div>
      
            <div class="col-md-8 offset-md-1">
        <h3 class="mb-3 border-bottom">Books</h3>
        <% @user.books.each do |book| %>
          <div class="row mb-1 border-bottom">
            <div class="col-md-2">
              <%= link_to user_path(book.user) do %>
                <% if book.image.attached? %>
                  <%= image_tag book.image.variant(resize_to_limit: [75, 75]), class: "img-fluid rounded-circle" %>
                <% else %>
                  <%= image_tag 'default-image.jpg', class: "img-fluid rounded-circle" %>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-5">
              <!-- ユーザー名のリンクが正しいことを確認 -->
              <h5 class="mb-1"><%= link_to book.user.name, user_path(book.user) %></h5>
            </div>
            <div class="col-md-5">
              <h5 class="mb-1"><%= link_to book.title, book_path(book) %></h5>
              <p><%= book.body %></p>
            </div>
          </div>
        <% end %>
      
      </div>
    </div>
  </div>
</main>