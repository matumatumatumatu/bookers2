<!--user/edit-->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">User info</h2>
      <%= render 'devise/shared/error_messages', object: @user %>
      <%= form_with model: @user, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.label :profile_image, "Image" %>
          <%= f.file_field :profile_image, class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        
        <div class="text-center">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>